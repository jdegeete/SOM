ThreadTest = (
	run = (
		| threads |
		
	
		threads := Vector new.
		1 to: 1000 do: [ :index|
		        threads append: [ |delay|
			 delay := Delay forSeconds: 5.
			 delay wait.
			 index print.
			 ' fertig' println.
			] spawn.
		].
			
		threads do: [ :thread| thread join].
	)
)
